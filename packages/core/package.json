{
  "name": "@helixnetwork/core",
  "version": "1.0.0-alpha.5",
  "description":
    "Core functionality to interact with the helix network: generate addresses, create, broadcast and monitor transactions.",
  "main": "./out/core/src/index.js",
  "typings": "typings/core/src",
  "publishConfig": {
    "access": "private"
  },
  "scripts": {
    "prepare": "tsc",
    "test": "tsc && nyc ava",
    "test-ci": "nyc ava",
    "format": "prettier",
    "docs":
      "tsc && jsdoc2md --no-cache --plugin dmd-clear -t README_tpl.hbs --files './out/**/*.js' > README.md"
  },
  "contributors": [
    "Dominik Schiener <dom@iota.org> (https://iota.org)",
    "Edward Greve <edward@iota.org> (https://github.com/anyong)",
    "Chris Dukakis <chris.dukakis@iota.org> (https://github.com/chrisdukakis)"
  ],
  "ava": {
    "files": ["out/core/test/integration/**/*.test.js"],
    "failFast": false,
    "failWithoutAssertions": false,
    "compileEnhancements": false,
    "verbose": true
  },
  "nyc": {
    "watermarks": {
      "functions": [80, 95],
      "branches": [80, 95],
      "statements": [80, 95]
    },
    "include": ["out/*/src/*.js", "out/*/test/**/*.js"],
    "exclude": [
      "out/*/test/integration/nocks/*.js",
      "out/**/createSendTransfer.js",
      "out/**/createIsReattachable.js",
      "out/**/createInterruptAttachingToTangle.js"
    ]
  },
  "keywords": [
    "helix",
    "tangle",
    "library",
    "browser",
    "javascript",
    "nodejs",
    "API"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helixnetwork/helix.api/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helixnetwork/helix.api.git"
  },
  "dependencies": {
    "@helixnetwork/bundle": "^1.0.0-alpha.5",
    "@helixnetwork/bundle-validator": "^1.0.0-alpha.5",
    "@helixnetwork/checksum": "^1.0.0-alpha.5",
    "@helixnetwork/converter": "^1.0.0-alpha.5",
    "@helixnetwork/hash-module": "^1.0.0-alpha.5",
    "@helixnetwork/http-client": "^1.0.0-alpha.5",
    "@helixnetwork/pad": "^1.0.0-alpha.5",
    "@helixnetwork/transaction": "^1.0.0-alpha.5",
    "@helixnetwork/transaction-converter": "^1.0.0-alpha.5",
    "@helixnetwork/winternitz": "^1.0.0-alpha.5",
    "@types/bluebird": "^3.5.20",
    "bluebird": "^3.5.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-async-generators": "^7.0.0-beta.49",
    "@helixnetwork/samples": "^1.0.0-alpha.5",
    "@types/nock": "^9.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "nock": "^9.2.3"
  }
}
