{
    "name": "@helixnetwork/unit-converter",
    "version": "0.0.1-alpha.2",
    "description": "Converts value across different IOTA units.",
    "main": "./out/src/index.js",
    "typings": "./out/src",
    "publishConfig": {
        "access": "private"
    },
    "scripts": {
        "prepare": "tsc",
        "test": "tsc && nyc ava",
        "test-ci": "nyc ava",
        "format": "prettier",
        "docs": "tsc && jsdoc2md --no-cache --plugin dmd-clear -t README_tpl.hbs --files './out/**/*.js' > README.md"
    },
    "contributors": [
        "Dominik Schiener <dom@iota.org> (https://iota.org)",
        "Edward Greve <edward@iota.org> (https://github.com/anyong)",
        "Chris Dukakis <chris.dukakis@iota.org> (https://github.com/chrisdukakis)"
    ],
    "ava": {
        "files": "out/test/*.test.js",
        "failFast": true,
        "failWithoutAssertions": false,
        "compileEnhancements": false,
        "verbose": true
    },
    "nyc": {
        "watermarks": {
            "functions": [
                80,
                95
            ],
            "branches": [
                80,
                95
            ],
            "statements": [
                80,
                95
            ]
        },
        "include": [
            "out/src/*.js",
            "out/test/*.js"
        ]
    },
    "keywords": [
        "iota",
        "tangle",
        "library",
        "browser",
        "javascript",
        "nodejs",
        "API"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/helixnetwork/helix.api/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/helixnetwork/helix.api.git/tree/dev/packages/crypto"
    },
    "dependencies": {
        "@types/bignumber.js": "^5.0.0",
        "bignumber.js": "^4.1.0"
    }
}
