{
    "name": "@helix/bundle-validator",
    "version": "1.0.0-beta.5",
    "description": "Syntactically validates bundle structure and signatures.",
    "main": "./out/bundle-validator/src/index.js",
    "typings": "typings/bundle-validator/src",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prepare": "tsc",
        "test": "tsc && nyc ava",
        "test-ci": "nyc ava",
        "format": "prettier",
        "docs": "tsc && jsdoc2md --no-cache --plugin dmd-clear -t README_tpl.hbs --files './out/**/*.js' > README.md"
    },
    "contributors": [
        "Dominik Schiener <dom@iota.org> (https://iota.org)",
        "Edward Greve <edward@iota.org> (https://github.com/anyong)",
        "Chris Dukakis <chris.dukakis@iota.org> (https://github.com/chrisdukakis)"
    ],
    "ava": {
        "files": "out/bundle-validator/test/*.test.js",
        "failFast": true,
        "failWithoutAssertions": false,
        "compileEnhancements": false,
        "verbose": true
    },
    "nyc": {
        "watermarks": {
            "functions": [
                80,
                95
            ],
            "branches": [
                80,
                95
            ],
            "statements": [
                80,
                95
            ]
        },
        "include": [
            "out/*/src/*.js",
            "out/*/test/*.js"
        ]
    },
    "keywords": [
        "iota",
        "tangle",
        "library",
        "browser",
        "javascript",
        "nodejs",
        "API"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/helixnetwork/helix.api/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/helixnetwork/helix.api.git/tree/dev/packages/crypto"
    },
    "dependencies": {
        "@helix/converter": "^1.0.0-beta.5",
        "@helix/kerl": "^1.0.0-beta.5",
        "@helix/signing": "^1.0.0-beta.5",
        "@helix/transaction": "^1.0.0-beta.5",
        "@helix/transaction-converter": "^1.0.0-beta.5"
    },
    "devDependencies": {
        "@helix/samples": "^1.0.0-beta.5"
    }
}
