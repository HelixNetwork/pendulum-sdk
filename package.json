{
  "name": "helix.api",
  "version": "0.0.1-alpha.0",
  "description":
    "Helix API Library forked from IOTA Client Reference Implementation",
  "scripts": {
    "init": "npm i && lerna bootstrap",
    "test": "lerna run test --stream",
    "test-ci": "lerna bootstrap && lerna run test-ci --stream",
    "precommit": "lint-staged",
    "format": "prettier",
    "docs": "lerna run docs",
    "testapi": " mocha -r  ts-node/register test/**/*.test.ts"
  },
  "contributors": [
    "Dominik Schiener <dom@iota.org> (https://iota.org)",
    "Edward Greve <edward@iota.org> (https://github.com/anyong)",
    "Chris Dukakis <chris.dukakis@iota.org> (https://github.com/chrisdukakis)",
    "Oliver Fohrmann <of@hlx.ai> (https://github.com/ofo42)",
    "Frauke Sophie Abben <fsa@hlx.ai> (https://github.com/fsbbn)"
  ],
  "ava": {
    "files": [
      "packages/**/out/**/test/*.test.js",
      "packages/**/out/**/test/integration/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "compileEnhancements": false,
    "verbose": true
  },
  "lint-staged": {
    "*.{js,ts,json}": ["prettier --write", "git add"]
  },
  "keywords": ["helix", "tangle", "library", "javascript", "nodejs", "API"],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HelixNetwork/helix.api/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HelixNetwork/helix.api.git"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/request": "^2.47.1",
    "babel-preset-env": "^1.7.0",
    "request": "^2.88.0",
    "ts-node": "^7.0.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "dmd-clear": "^0.1.2",
    "husky": "^0.14.3",
    "jsdoc-babel": "^0.4.0",
    "lerna": "^3.5.0",
    "lint-staged": "^7.3.0",
    "nyc": "^12.0.2",
    "prettier": "^1.10.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.2.1"
  }
}
